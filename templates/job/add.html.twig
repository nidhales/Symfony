{% extends 'base.html.twig' %}
{% block title %}Add Job
{% endblock %}
{% block content%}
	<!DOCTYPE html>
	<html>
		<style>
			input[type=text],
			select {
				width: 100%;
				padding: 12px 20px;
				margin: 8px 0;
				display: inline-block;
				border: 1px solid #ccc;
				border-radius: 4px;
				box-sizing: border-box;
			}

			input[type=submit] {
				width: 100%;
				background-color: #4CAF50;
				color: white;
				padding: 14px 20px;
				margin: 8px 0;
				border: none;
				border-radius: 4px;
				cursor: pointer;
			}
			label {
				margin-top: 10px;
				margin-bottom: 10px;
			}
			input[type=submit]:hover {
				background-color: #45a049;
			}
			textarea {
				width: 100%;
			}
			.bg {
				text-align: center;
				border-radius: 5px;
				background-color: #EAE7DC;

				padding: 20px;
			}
			h3 {
				font-size: 40px;
				text-shadow: -1.5px 1.5px grey;
				margin-bottom: 15px;
			}
		</style>
		<body>
			<div class="row justify-content-center">
				<div class="bg col-lg-9 ">
					<h3>Add New Job</h3>
					<form>
						<label for="fname">Intitulé</label>
						<input type="text" id="fname" name="intitulé" placeholder="Intitulé...">
						<label for="lname">Societé</label>
						<input type="text" id="lname" name="Societé" placeholder="Societé...">
						<label class="label" for="description">Description :</label><br>
						<textarea name="Description" rows="10" cols="30"></textarea>
						<button type="submit" class="btn btn-success" style="margin-top: 10px;">Add

							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-square" viewbox="0 0 16 16">
								<path d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z"/>
								<path d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z"/>
							</svg>
						</button>
					</form>
				</div>
			</div>
		</body>
	</html>
</body></html>{% endblock %}
